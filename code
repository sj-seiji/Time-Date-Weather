import { SPHttpClient, SPHttpClientConfiguration, SPHttpClientResponse, ISPHttpClientConfiguration } from '@microsoft/sp-http';

// Inside your class definition

private _getListData(): Promise<any[]> {
  const requestHeaders: Headers = new Headers();
  requestHeaders.append('Accept', 'application/json;odata=nometadata');
  requestHeaders.append('Content-Type', 'application/json;odata=nometadata');

  const spHttpClientOptions: ISPHttpClientConfiguration = {
    headers: requestHeaders
  };

  const spHttpClient: SPHttpClient = this.context.spHttpClient;
  const requestUrl: string = this.context.pageContext.web.absoluteUrl + `/_api/web/lists/getbytitle('YourListName')/items?$select=Title,ImageUrl,LinkUrl`;

  return spHttpClient.get(requestUrl, SPHttpClient.configurations.v1, spHttpClientOptions)
    .then((response: SPHttpClientResponse) => {
      return response.json();
    })
    .then((data: any) => {
      return data.value;
    }) as Promise<any[]>;
}
